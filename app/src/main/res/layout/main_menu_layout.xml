<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5F5F6"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cvTopLayout"
        android:layout_width="match_parent"
        tools:ignore="MissingConstraints"
        android:layout_height="240dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0">

        <include layout="@layout/drawer_top_layout"
            android:id="@+id/top"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
           />
    </android.support.v7.widget.CardView>

    <TextView
        android:textColor="#9f9a9a"
        tools:ignore="MissingConstraints"
        android:textSize="12sp"
        android:text="EXPLORE"
        android:layout_width="67dp"
        android:layout_height="16dp"
        android:id="@+id/textView6"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cvTopLayout"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:text="Gift Cards"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/textView7"
        style="@style/menuFontItemStyle"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:textColor="#9f9a9a"
        tools:ignore="MissingConstraints"
        android:textSize="12sp"
        android:text="CONTACT US"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/textView8"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.23" />

    <TextView
        android:textColor="#9f9a9a"
        tools:ignore="MissingConstraints"
        android:textSize="12sp"
        android:text="MORE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        app:layout_constraintLeft_toRightOf="@+id/horizontalView"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="@+id/textView8"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp" />
    <View
        android:background="#9f9a9a"
        android:id="@+id/horizontalView"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textView8"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_height="20dp"
        android:layout_width="2dp" />

    <TextView
        android:textSize="10sp"
        android:padding="10dp"
        android:text="Featured"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:background="@drawable/rounded_corner"
        android:textColor="#FFEF6464"
        app:layout_constraintTop_toTopOf="@+id/textView7"
        app:layout_constraintBottom_toBottomOf="@+id/textView7"
        android:layout_marginEnd="32dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="32dp" />

</android.support.constraint.ConstraintLayout>